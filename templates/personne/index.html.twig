{% extends 'template.html.twig' %}

{% block title %}Liste des personnes{% endblock %}
{% block pageTitle %}
    Liste des personnes
{% endblock %}
{% block body %}
<div class="row">
    

    {% for personne in personnes %}
<div class="col-3 mt-2">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{ personne.name }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ personne.firstname }} {{ personne.name }}</h6>
            <p class="card-text">Age: {{ personne.age }}</p>
            <a href="{{ path('personne.detail', {id: personne.id}) }}" class="card-link">DÃ©tails</a>
            <a href="{{ path('personne.delete', {id: personne.id}) }}" class="card-link">Delete</a>
        </div>
    </div>
     </div>
    {% endfor %}
</div>
{% if isPaginated is defined and isPaginated %}

<div class="row mt-2">
<nav class='col' aria-label="Page navigation example">
  <ul class="pagination">
    {% if page != 1 %}
    <li class="page-item"><a class="page-link" href="{{ path('personne.list.all', {page: page -1, nbre: nbre}) }}">Previous</a></li>
    {% endif %}
    {% for i in range(1, nbrePage) %}
        <li class="page-item"><a class="page-link" href="{{ path('personne.list.all', {page: i, nbre: nbre}) }}">{{i}}</a></li>
    {% endfor %}
    
     {% if page != nbrePage %}
    <li class="page-item"><a class="page-link" href="{{ path('personne.list.all', {page: page + 1, nbre: nbre}) }}">Next</a></li>
    {% endif %}
  </ul>
</nav>
</div>
{% endif %}
{% endblock %}
